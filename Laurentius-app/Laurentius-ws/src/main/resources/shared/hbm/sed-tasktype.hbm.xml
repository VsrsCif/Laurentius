<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    
    <class name="si.laurentius.cron.SEDTaskType"
           table="LAU_TASK_TYPE">
        <id column="TYPE" name="type" length="64" type="java.lang.String" />            
        <property column="NAME" name="Name"  length="128" type="java.lang.String"/>
        <property column="JNDI" name="Jndi"  length="256" type="java.lang.String"/>
        <property column="DESCRIPTION" name="Description"  length="512" type="java.lang.String"/>
        <bag name="sedTaskTypeProperties"  access="field" cascade="all" lazy="false" order-by="Id asc" >
            <key not-null="true">
                <column name="TASK_TYPE" scale="0" />
            </key>
            <one-to-many class="si.laurentius.cron.SEDTaskTypeProperty" />
        </bag>
    </class>    
    
    <class name="si.laurentius.cron.SEDTaskTypeProperty" table="LAU_TASK_TYPE_PROPERTY">
        <id name="Id" type="java.math.BigInteger">
            <column name="ID" scale="0" />
            <generator class="sequence">
                <param name="sequence">SEQ_LAU_TASK_TYPE_PROP</param>                
            </generator>
        </id>		
        <property column="KEY" name="Key"   length="64"  type="java.lang.String"/>
        <property column="DESCRIPTION" name="Description"  length="512" type="java.lang.String"/>  
        <property column="MANDATORY" name="Mandatory"   type="java.lang.Boolean"/>
    </class>
    
    <query si.laurentius.cron.SEDTaskType.getByType" ><![CDATA[SELECT p FROM SEDTaskType p WHERE p.type = :type]]></query>     
    <query si.laurentius.cron.SEDTaskType.getAll" ><![CDATA[SELECT p FROM SEDTaskType p order by id asc]]></query>
    

</hibernate-mapping>