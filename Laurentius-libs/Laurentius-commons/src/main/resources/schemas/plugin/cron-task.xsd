<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:ns1="http://laurentius.si/plugin/crontask" 
            xmlns:ns2="http://laurentius.si/plugin/component" 
           targetNamespace="http://laurentius.si/plugin/crontask" elementFormDefault="qualified" attributeFormDefault="unqualified">
    <xs:import namespace="http://laurentius.si/plugin/component" schemaLocation="./component-base.xsd"/>
    <xs:element name="CronTaskDef" type="ns1:CronTaskDef"/>
    <xs:complexType name="CronTaskDef" mixed="false">
        <xs:complexContent mixed="false">
            <xs:extension base="ns2:ComponentBase" >		
                <xs:sequence>
                    <xs:element name="CronTaskPropertyDef" type="ns1:CronTaskPropertyDef" minOccurs="0" maxOccurs="unbounded"/>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>		
    </xs:complexType>
    <xs:complexType name="CronTaskPropertyDef">
        <xs:annotation>
            <xs:documentation/>
        </xs:annotation>
        <xs:attribute name="id" type="xs:integer"/>
        <xs:attribute name="key" use="required">
            <xs:annotation>
                <xs:documentation xml:lang="sl">Naziv lastnosti </xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:minLength value="1"/>
                    <xs:maxLength value="64"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="description"/>
        <xs:attribute name="mandatory" type="xs:boolean" default="false"/>
        <xs:attribute name="type" default="string">
            <xs:simpleType>
                <xs:restriction base="xs:token">
                    <xs:maxLength value="16"/>
                    <xs:enumeration value="boolean"/>
                    <xs:enumeration value="string"/>
                    <xs:enumeration value="list"/>
                    <xs:enumeration value="multiList"/>
                    <xs:enumeration value="int"/>
                    <xs:enumeration value="date"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="valueList">
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:maxLength value="1024"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="valueFormat">
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:maxLength value="512"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
    </xs:complexType>
</xs:schema>
